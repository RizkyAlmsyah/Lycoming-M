<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" >

    <data>
        <variable
            name="job"
            type="gmf.rizky.lycomingm.data.db.entities.Job" />
        <variable
            name="viewmodel"
            type="gmf.rizky.lycomingm.ui.noteonprogress.NoteViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_viewEngineJob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                tools:listitem="@layout/item_job"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_below="@+id/wrapper"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_light"
                    android:layout_marginBottom="4dp"
                    android:text="Visual Inspection Accessory Housing"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#123456"
                    android:layout_gravity="center"
                    tools:text="Visual Inspection Accessory Housing"/>

                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_light"
                    android:layout_marginBottom="4dp"
                    android:text="Note"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#123456"/>

                <EditText
                    android:text="@={viewmodel.note}"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:gravity="start"
                    android:hint="Excellent"
                    android:layout_margin="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <Button
                    android:layout_marginLeft="12dp"
                    android:text="Submit"
                    android:onClick="@{viewmodel::onSubmitButtonClick}"
                    android:fontFamily="@font/helvetica_light"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>

            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>



</layout>